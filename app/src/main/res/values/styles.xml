<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="headline">
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:paddingTop">@dimen/headline_padding</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:onClick">toastShow</item>
    </style>

    <style name="status">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/colorStatusText</item>
        <item name="android:paddingBottom">@dimen/status_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/status_padding_left_right</item>
        <item name="android:paddingRight">@dimen/status_padding_left_right</item>
        <item name="android:paddingTop">@dimen/status_padding_top_bottom</item>
        <item name="android:textSize">@dimen/status_text_size</item>
        <item name="android:layout_marginRight">@dimen/status_margin</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:onClick">toastShow</item>
    </style>

    <style name="listText">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:onClick">toastShow</item>
    </style>

    <style name="listDate">
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:onClick">toastShow</item>
    </style>

    <style name="borderline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/borderline_height</item>
        <item name="android:background">@color/colorBorderline</item>
        <item name="android:layout_marginTop">@dimen/borderline_margin</item>
        <item name="android:layout_marginBottom">@dimen/borderline_margin</item>
        <item name="android:onClick">toastShow</item>
    </style>

    <style name="mainText">
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:layout_marginTop">@dimen/main_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_text_margin</item>
        <item name="android:onClick">toastShow</item>
    </style>

</resources>
